using UnityEngine;

public class AlarmTrigger : MonoBehaviour
{
    [SerializeField] Alarm _alarm;

    private void OnTriggerEnter(Collider other)
    {
        if (other.TryGetComponent(out Player player))
        {
            _alarm?.TriggerAlarm();
        }
    }

    private void OnTriggerExit(Collider other)
    {
        if (other.TryGetComponent(out Player player))
        {
            _alarm?.StopAlarm();
        }
    }
}
